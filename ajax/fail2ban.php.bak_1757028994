<?php
require_once __DIR__ . '/../inc/auth.php';
requireLogin();
$j = $_GET['jail'] ?? '';
if ($j === '') { http_response_code(400); echo 'no jail'; exit; }
// sanitize
$jail = escapeshellarg($j);
$fbin = trim(shell_exec('command -v fail2ban-client || true'));
if (empty($fbin)) { http_response_code(503); echo 'fail2ban-client not available'; exit; }
$out = shell_exec($fbin.' status '. $jail . ' 2>&1');
echo $out;
