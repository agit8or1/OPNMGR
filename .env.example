# OPNsense Manager - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# Database Configuration
DB_HOST=localhost
DB_NAME=opnsense_fw
DB_USER=opnsense_user
DB_PASS=CHANGE_THIS_TO_SECURE_PASSWORD

# Database Root Password (for installation only)
DB_ROOT_PASSWORD=CHANGE_THIS_TO_SECURE_ROOT_PASSWORD

# Application Settings
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-domain.com
APP_TIMEZONE=UTC

# Security
SESSION_SECRET=GENERATE_RANDOM_STRING_HERE_MIN_32_CHARS
ENCRYPTION_KEY=GENERATE_32_BYTE_RANDOM_KEY_HERE
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_TIME=900

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
SMTP_ENCRYPTION=tls
SMTP_FROM_ADDRESS=noreply@yourdomain.com
SMTP_FROM_NAME="OPNsense Manager"

# Screenshot Account (if needed)
SCREENSHOT_USERNAME=screenshot
SCREENSHOT_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# ACME/Let's Encrypt
ACME_EMAIL=admin@yourdomain.com
ACME_DOMAIN=yourdomain.com

# Proxy Settings
PROXY_PORT_START=8100
PROXY_PORT_END=8199

# Backup Settings
BACKUP_RETENTION_MONTHS=2

# API Security
API_KEY_LENGTH=32
API_TOKEN_EXPIRY=3600

# Snyk Integration (optional)
SNYK_TOKEN=your-snyk-api-token-here

# Fail2Ban Integration
FAIL2BAN_ENABLED=true

# Feature Flags
ENABLE_2FA=true
ENABLE_GEOIP=false
ENABLE_AUDIT_LOG=true

# GitHub Integration (for automated deployment/updates)
GITHUB_PAT=your-github-personal-access-token-here
GITHUB_USERNAME=agit8or1
GITHUB_REPO=opnmgr
